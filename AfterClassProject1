import cv2
import numpy as np
def apply_colour_filter(image, filtered_type):
    filtered_image = image.copy()
    if filtered_type == "original":
        return filtered_image
    elif filtered_type == "red_tint":
        filtered_image[:,:, 1] = 0
        filtered_image[:,:, 0] = 0
    elif filtered_type == "blue_tint":
        filtered_image[:,:, 1] = 0
        filtered_image[:,:, 2] = 0
    elif filtered_type == "green_tint":
        filtered_image[:,:, 0] = 0
        filtered_image[:,:, 2] = 0
    return filtered_image
image_path = 'example.jpg'
image = cv2.imread(image_path)
if image is None:
    print("Image Not Found")
else:
    image = cv2.resize(image, (1200,800))
    filter_type = "original"
    print("Press the following keys to apply filters")
    print("O - Original Filter")
    print("R - Red Tint Filter")
    print("G - Green Tint Filter")
    print("B - Blue Tint Filter")
    print("Q - Quit")

    while True:
        filtered_image = apply_colour_filter(image, filter_type)
        cv2.imshow("Filtered Image", filtered_image)
        key = cv2.waitKey(0) & 0xFF
        if key == ord("o"):
            filter_type = "original"
        elif key == ord("r"):
            filter_type = "red_tint"
        elif key == ord("g"):
            filter_type = "green_tint"
        elif key == ord("b"):
            filter_type = "blue_tint"
        elif key == ord("q"):
            print("Exiting...")
            break
        else:
            print("Please use a valid option pls")
    cv2.destroyAllWindows()